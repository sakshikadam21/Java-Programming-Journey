package programming;

import java.util.Scanner;

public class PalindromicLeapYear {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);

        System.out.println("Enter the Year:");
        int year = scan.nextInt();

        // Step 1: Check Leap Year
        if (year % 400 == 0 || (year % 4 == 0 && year % 100 != 0)) {

            int temp = year;
            int revYear = 0;

            // Step 2: Reverse the year
            while (temp != 0) {
                int rem = temp % 10;
                revYear = revYear * 10 + rem;
                temp /= 10;
            }

            // Step 3: Check Palindrome
            if (revYear == year) {
                System.out.println(year + " is a Palindromic Leap Year");
            } else {
                System.out.println(year + " is a Leap Year but not Palindromic");
            }

        } else {
            System.out.println(year + " is not a Leap Year");
        }
    }
}
